<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:background="@color/devider_color_gray"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/common_account"
            android:text="验证码将发送至您"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/common_account"
            android:layout_marginLeft="0dp"
            android:text="***********"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/common_account"
            android:layout_marginLeft="0dp"
            android:text="的手机号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_modify_phone_code"
            style="@style/main_edit_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="99"
            android:background="@null"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:drawableLeft="@drawable/icon_loading_footbar_0"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:textColorHint="@color/hint_text_color"
            android:inputType="number"
            android:maxLength="6" />

        <Button
            android:id="@+id/btn_modify_phone"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_marginLeft="-2dp"
            android:background="@drawable/vertify_code_shap"
            android:gravity="center"
            android:onClick="getVerifyCode"
            android:layout_gravity="center_vertical"
            android:text="获取验证码"
            android:layout_marginRight="10dp"
            android:textColor="@color/vertifycode_selector"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/common_account"
        android:text="修改成功后需要使用新的手机号进行登陆"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/bt_modify_phone_next"
        style="@style/btn_orsnge_big"
        android:onClick="register"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:text="下一步" />

</LinearLayout>
