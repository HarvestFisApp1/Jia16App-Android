<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/line_background"
        android:orientation="horizontal">

        <TextView
            style="@style/common_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="您正在为"
            android:textColor="@color/sub_text_color" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="**"
            android:textColor="@color/forget_text_color"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="重置交易密码"
            android:textColor="@color/sub_text_color"
            android:textSize="15dp" />

    </LinearLayout>

    <!--我记得原交易密码-->
    <LinearLayout
        android:id="@+id/ll_remember_deal_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_item_white_sele"
        android:orientation="horizontal">

        <TextView
            style="@style/common_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我记得原交易密码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_arrow_right_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devider_color_gray"/>

    <!--我忘记原交易密码了-->
    <LinearLayout
        android:id="@+id/ll_forget_deal_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_item_white_sele"
        android:orientation="horizontal">

        <TextView
            style="@style/common_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我忘记原交易密码了" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_arrow_right_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devider_color_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_background">



    </RelativeLayout>
</LinearLayout>
