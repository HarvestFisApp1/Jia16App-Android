<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:background="@drawable/white_round_shape_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alert_content"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="消息不符合，请重新填写！"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_devider_height"
        android:background="@color/devider_color_gray_for_alert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_left_button"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_16" />

        <View
            android:id="@+id/alert_space"
            android:layout_width="@dimen/default_devider_height"
            android:layout_height="match_parent"
            android:background="@color/devider_color_gray_for_alert" />

        <TextView
            android:id="@+id/alert_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_right_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

</LinearLayout>
