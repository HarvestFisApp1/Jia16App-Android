                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/assets_title1"
                        style="@style/asset_invest_name"
                        android:layout_width="wrap_content"
                        android:paddingTop="15dp"
                        android:text=" "/>

                    <TextView
                        android:id="@+id/tv_welfare1"
                        style="@style/asset_invest_name"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:visibility="gone"
                        android:background="@drawable/shape_welfare"
                        android:text="券"/>

                    <TextView
                        android:id="@+id/tv_assets_state1"
                        style="@style/asset_invest_name"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/white"
                        android:paddingLeft="3dp"
                        android:visibility="gone"
                        android:paddingRight="3dp"
                        android:background="@drawable/shap_transfer"
                        android:textSize="13dp"
                        android:text="可转让"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_year_earn1"
                            style="@style/asset_invest_name"
                            android:text="0.00%"
                            android:textSize="25dp"
                            android:textColor="@color/main_color"/>

                        <TextView
                            style="@style/asset_invest_name"
                            android:text="预期年化收益"
                            android:paddingTop="13dp"
                            android:textColor="@color/text_black_9"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/text_black_9"/>

