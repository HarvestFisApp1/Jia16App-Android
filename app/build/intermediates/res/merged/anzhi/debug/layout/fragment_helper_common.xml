<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--投资安全性-->
            <LinearLayout
                android:id="@+id/ll_helper_invester_mobile"
                style="@style/helper_center_linearlayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="投资安全性"
                    style="@style/common_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="〉"
                    android:textColor="@color/text_black_9"
                    android:textSize="25dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>

            <!--资金安全性-->
            <LinearLayout
                android:id="@+id/ll_helper_capital_mobile"
                style="@style/helper_center_linearlayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="资金安全性"
                    style="@style/common_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="〉"
                    android:textColor="@color/text_black_9"
                    android:textSize="25dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>


            <!--风险控制-->
            <LinearLayout
                android:id="@+id/ll_helper_risk"
                style="@style/helper_center_linearlayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="风险控制"
                    style="@style/common_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="〉"
                    android:textColor="@color/text_black_9"
                    android:textSize="25dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>


            <!--信息安全性-->
            <LinearLayout
                android:id="@+id/ll_helper_information"
                style="@style/helper_center_linearlayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="信息安全性"
                    style="@style/common_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="〉"
                    android:textColor="@color/text_black_9"
                    android:textSize="25dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>

            <!--隐私保护-->
            <LinearLayout
                android:id="@+id/ll_helper_privacy"
                style="@style/helper_center_linearlayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="隐私保护"
                    style="@style/common_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="〉"
                    android:textColor="@color/text_black_9"
                    android:textSize="25dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>

            <!--免责声明-->
            <LinearLayout
                android:id="@+id/ll_helper_statement"
                style="@style/helper_center_linearlayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="免责声明"
                    style="@style/common_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="〉"
                    android:textColor="@color/text_black_9"
                    android:textSize="25dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
