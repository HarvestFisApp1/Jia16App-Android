<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_round_shape_bg"
    android:orientation="vertical" >

    <!--<include layout="@layout/dialog_head_view"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">
    <ImageView
        android:id="@+id/alert_close"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:padding="@dimen/space_15"
        android:src="@drawable/icon_close_gray" />

    <TextView
        android:id="@+id/alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="49dp"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:paddingRight="@dimen/space_15"
        android:singleLine="true"
        android:text="提示"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/text_size_17" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_devider_height"
        android:background="@color/devider_color_gray"/>
	<TextView
	    android:id="@+id/alert_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:padding="8dp"
        android:minHeight="125dp"
	    android:gravity="center"
       	android:textColor="@color/main_text_color"
        android:textSize="@dimen/text_size_14"
        android:text="消息不符合，请重新填写！"/>

    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_devider_height"
        android:background="@color/devider_color_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/main_text_color"
            android:gravity="center"
            android:background="@drawable/selector_dialog_left_button"
            android:textSize="@dimen/text_size_16"
            android:text="取消" />

        <View
            android:id="@+id/alert_space"
            android:layout_width="@dimen/default_devider_height"
            android:layout_height="match_parent"
            android:background="@color/devider_color_gray_for_alert"/>

        <TextView
            android:id="@+id/alert_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_16"
            android:background="@drawable/selector_dialog_right_button"
            android:gravity="center"
            android:text="确定" />

    </LinearLayout>
</LinearLayout>
