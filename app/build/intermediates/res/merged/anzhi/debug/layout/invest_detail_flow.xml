<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/invest_icon1"/>

        <View
            android:layout_toRightOf="@+id/iv_icon1"
            android:layout_toLeftOf="@+id/iv_icon2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/invest_icon2"/>

        <View
            android:layout_toRightOf="@+id/iv_icon2"
            android:layout_toLeftOf="@+id/iv_icon3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/iv_icon3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/invest_icon3"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/asset_invest_desc"
                android:text="预计起息日"/>
            <TextView
                style="@style/asset_invest_desc"
                android:text="2017-01-01"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/asset_invest_desc"
                android:text="预计到期日"/>
            <TextView
                style="@style/asset_invest_desc"
                android:text="2017-01-01"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/asset_invest_desc"
                android:text="预计兑付日"/>
            <TextView
                style="@style/asset_invest_desc"
                android:text="不晚于2017-01-01"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>

