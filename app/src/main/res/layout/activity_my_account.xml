<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/common_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/devider_color_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />

            <!--用户名-->
            <LinearLayout
                android:id="@+id/ll_common_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/tv_common_account"
                    style="@style/common_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="******" />

                <ImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_arrow_right_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/line_color" />

            <!--修改手机号-->
            <LinearLayout
                android:id="@+id/ll_common_revise_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改手机号" />

                <TextView
                    android:id="@+id/tv_common_revise_phone"
                    style="@style/common_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="******" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_arrow_right_gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/line_color" />

            <!--风险偏好-->
            <LinearLayout
                android:id="@+id/ll_common_risk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="风险偏好" />

                <TextView
                    android:id="@+id/tv_common_risk"
                    style="@style/common_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请进行风险评测后，再投资！" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_arrow_right_gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/devider_color_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />


            <!--姓名-->
            <LinearLayout
                android:id="@+id/ll_common_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/tv_common_name"
                    style="@style/common_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="***" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/line_color" />

            <!--身份证号-->
            <LinearLayout
                android:id="@+id/ll_common_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="身份证号" />

                <TextView
                    android:id="@+id/tv_common_card"
                    style="@style/common_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="******" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/line_color" />

            <!--银行卡号-->
            <LinearLayout
                android:id="@+id/ll_bank_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="银行卡" />

                <TextView
                    android:id="@+id/tv_common_bank_card"
                    style="@style/common_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="******" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/line_color" />

            <!--修改银行预留手机-->
            <LinearLayout
                android:id="@+id/ll_common_risk_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改银行预留手机" />

                <TextView
                    android:id="@+id/tv_common_risk_phone"
                    style="@style/common_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="******" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_arrow_right_gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/devider_color_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />

            <!--修改登录密码-->
            <LinearLayout
                android:id="@+id/ll_common_login_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改登录密码" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_arrow_right_gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/line_color" />

            <!--修改交易密码-->
            <LinearLayout
                android:id="@+id/ll_common_trade_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改交易密码" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_arrow_right_gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/devider_color_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg" />

            <!--关闭手势密码-->
            <LinearLayout
                android:id="@+id/ll_common_gesture_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_common_gesture_password"
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关闭手势密码" />

                <CheckBox
                    android:id="@+id/common_switch_pword"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:button="@drawable/icon_switch_selector"
                    android:checked="false"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/line_color" />

            <!--修改手势密码-->
            <LinearLayout
                android:id="@+id/ll_common_risk_gesture_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_white_sele"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改手势密码" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_arrow_right_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/devider_color_gray"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_common_loginout"
                    style="@style/btn_orsnge_big"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


