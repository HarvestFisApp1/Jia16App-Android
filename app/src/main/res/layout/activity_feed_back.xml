<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/devider_color_gray"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:gravity="center_vertical"
            android:text="反馈类型"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <RadioGroup
            android:id="@+id/rg_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/feed_back_select"
                    android:gravity="center"
                    android:textColor="@color/feed_back_selector"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="页面优化"
                    android:textSize="15dp"></RadioButton>

                <RadioButton
                    android:id="@+id/rb_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/feed_back_selector"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/feed_back_select"
                    android:gravity="center"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="系统问题"
                    android:textSize="15dp"></RadioButton>

                <RadioButton
                    android:id="@+id/rb_num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rb_num1"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/feed_back_selector"
                    android:background="@drawable/feed_back_select"
                    android:gravity="center"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="需要新功能"
                    android:textSize="15dp"></RadioButton>

                <RadioButton
                    android:id="@+id/rb_num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/rb_num2"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/feed_back_select"
                    android:gravity="center"
                    android:textColor="@color/feed_back_selector"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="其他"
                    android:textSize="15dp"></RadioButton>

            </RelativeLayout>

        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <EditText
        android:id="@+id/et_nologin_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="18dp"
        android:textColorHint="@color/text_black_9"
        android:gravity="center_vertical"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="gone"
        android:background="@color/white"
        android:hint="请输入您的联系方式(手机号或邮箱均可)"/>

    <View
        android:id="@+id/et_nologin_devider"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <EditText
            android:id="@+id/et_feed_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cursorVisible="true"
            android:gravity="top"
            android:hint="请输入您对嘉石榴的反馈意见"
            android:maxLength="150"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_black_9"
            android:textCursorDrawable="@null"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_leng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_black_9"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/150"
                android:textColor="@color/text_black_9"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_subject"
        style="@style/btn_orsnge_big"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:onClick="register"
        android:text="提交" />

</LinearLayout>
