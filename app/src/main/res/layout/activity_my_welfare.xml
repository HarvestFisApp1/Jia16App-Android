<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/devider_color_gray"
    android:clipToPadding="false"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">


        <!--返回按钮-->

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@mipmap/icon_back" />

        <!--标题栏-->
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的福利"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <Button
            android:id="@+id/btn_use_rule"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="使用规则"
            android:background="@color/transparent"
            android:layout_marginRight="8dp"
            android:textColor="@color/white_selector"
            android:textSize="15dp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:baselineAligned="false"
        android:background="@color/devider_color_gray"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/invester_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1">
            <TextView
                android:id="@+id/invester_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="#ffec5741"
                android:text="未使用(0)"/>
            <View
                android:id="@+id/invester_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:background="@color/helper_center_select_line"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/common_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1">
            <TextView
                android:id="@+id/common_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="#ff666666"
                android:text="已使用(0)"/>
            <View
                android:id="@+id/common_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:background="@color/helper_center_line"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/mobile_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1">
            <TextView
                android:id="@+id/mobile_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="#ff666666"
                android:text="已过期(0)"/>
            <View
                android:id="@+id/mobile_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:background="@color/helper_center_line"/>
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/helper_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_check1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/my_welfare_select"
                    android:gravity="center"
                    android:checked="true"
                    android:textColor="@color/white_red_selector"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="代金券面值 ∧"
                    android:textSize="15dp"></RadioButton>

                <RadioButton
                    android:id="@+id/rb_check2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white_red_selector"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_welfare_select"
                    android:gravity="center"
                    android:button="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="代金券有效期 ∨"
                    android:textSize="15dp"></RadioButton>

        </RadioGroup>
    </LinearLayout>

</LinearLayout>