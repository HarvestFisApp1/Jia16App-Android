<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_white_bg"
    android:orientation="vertical" >
    <include layout="@layout/dialog_head_view"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e4e3dc"/>

	<EditText android:id="@+id/et_pwd"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="@drawable/edit_text_background"
	    android:padding="10dip"
        android:textCursorDrawable="@drawable/color_cursor"
	    android:inputType="textPassword"
	    android:layout_margin="20dip"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e4e3dc"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/alert_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/btn_gray_small"
            android:text="取消"/>
        <View 
            android:id="@+id/alert_space"
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <Button 
            android:id="@+id/alert_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/btn_orange_small"
            android:text="确认"/>        
    </LinearLayout>
</LinearLayout>
