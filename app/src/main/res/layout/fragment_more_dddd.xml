<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/devider_color_gray">


    <LinearLayout
        android:id="@+id/ll_my_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/common_title_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/common_item_white_sele"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_text_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="嘉石榴忠实用户"
                        android:textColor="#bb000000"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:id="@+id/ll_text_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安全等级"
                            android:textColor="@color/text_black_6"
                            android:textSize="15dp" />

                        <ProgressBar
                            android:id="@+id/pb_progress"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:maxHeight="5dp"
                            android:minHeight="5dp"
                            android:max="100"
                            android:progress="50"
                            android:background="@drawable/shap_progress_bg"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progress_horizontal"/>


                        <TextView
                            android:id="@+id/tv_mobile_desc"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="〉"
                android:textColor="@color/text_black_9"
                android:textSize="25dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <GridView
            android:id="@+id/gv_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/devider_color_gray"
            android:horizontalSpacing="1.0dp"
            android:numColumns="3"
            android:verticalSpacing="1.0dp"
            android:overScrollMode="never">

        </GridView>

    </LinearLayout>

    <include
        layout="@layout/common_net_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
