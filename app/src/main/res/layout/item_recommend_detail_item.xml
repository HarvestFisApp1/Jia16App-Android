<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/devider_color_gray"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_recommend_name"
           style="@style/invite_friend"
            android:text="***"/>

        <TextView
            android:id="@+id/tv_invite_money"
            style="@style/invite_friend"
            android:layout_marginTop="15dp"
            android:text="1000元-10000元"/>

        <TextView
            style="@style/invite_friend"
            android:layout_marginTop="15dp"
            android:text="30天内投资"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_phone"
            style="@style/invite_friend"
            android:text="133****8888"/>

        <TextView
            android:id="@+id/tv_deduct"
            style="@style/invite_friend"
            android:layout_marginTop="15dp"
            android:text="0.00元"/>

        <TextView
            style="@style/invite_friend"
            android:layout_marginTop="15dp"
            android:text="0.1%提成"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_award_state"
            style="@style/invite_friend"
            android:padding="3dp"
            android:background="@drawable/shape_recommend_state"
            android:text="奖励已发放"/>

        <TextView
            android:id="@+id/tv_award_money"
            style="@style/invite_friend"
            android:layout_marginTop="15dp"
            android:text="0.00元"/>

        <TextView
            style="@style/invite_friend"
            android:layout_marginTop="15dp"
            android:text="现金奖励"/>

    </LinearLayout>

</LinearLayout>
