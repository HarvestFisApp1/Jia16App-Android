<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/devider_color_gray"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_assets_name"
            style="@style/asset_invest_name"
            android:text="新手专享13号"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invet_amount"
                   style="@style/asset_invest_desc"
                    android:textColor="@color/text_color_dark_gray"
                    android:text="0.00"/>

                <TextView
                    style="@style/asset_invest_desc"
                    android:paddingTop="6dp"
                    android:text="投资金额(元)"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_deadline"
                    style="@style/asset_invest_desc"
                    android:textColor="@color/text_color_dark_gray"
                    android:text="0"/>

                <TextView
                    style="@style/asset_invest_desc"
                    android:paddingTop="6dp"
                    android:text="期限(天)"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invest_date"
                    style="@style/asset_invest_desc"
                    android:textColor="@color/text_color_dark_gray"
                    android:text="1970-02-02"/>

                <TextView
                    style="@style/asset_invest_desc"
                    android:paddingTop="6dp"
                    android:text="投资时间"/>
            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/devider_color_gray"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        style="@style/asset_invest_desc"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="还款方式: 到期还本付息"/>
</LinearLayout>
