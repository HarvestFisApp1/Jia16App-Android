<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/main_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="预期年化"
                    android:textSize="16dp"
                    android:paddingTop="13dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00 %"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:textSize="30dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/invest_account_devider"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/devider_color_gray"/>

            <!--剩余投资金额-->
            <LinearLayout
                style="@style/helper_center_linearlayout"
                android:orientation="horizontal">

                <TextView
                    style="@style/invest_left_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="剩余投资金额" />

                <TextView
                    style="@style/invest_right_data"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0.00元" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>

            <!--投资期限-->
            <LinearLayout
                style="@style/helper_center_linearlayout"
                android:orientation="horizontal">

                <TextView
                    style="@style/invest_left_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="投资期限" />

                <TextView
                    style="@style/invest_right_data"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0 天" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>

            <!--还款方式-->
            <LinearLayout
                style="@style/helper_center_linearlayout"
                android:orientation="horizontal">

                <TextView
                    style="@style/invest_left_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="还款方式" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/invest_right_data"
                        android:layout_width="wrap_content"
                        android:text="到期还本付息" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/progress_di"
                        android:textSize="16dp"
                        android:paddingLeft="3dp"
                        android:gravity="center_vertical"
                        android:text="g"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>

            <!--起投金额-->
            <LinearLayout
                style="@style/helper_center_linearlayout"
                android:orientation="horizontal">

                <TextView
                    style="@style/invest_left_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="起投金额" />

                <TextView
                    style="@style/invest_right_data"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0.00 元" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/devider_color_gray"/>


            <include layout="@layout/invest_detail_flow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/devider_color_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="投资金额"
                android:textSize="16dp"
                android:paddingTop="16dp"
                android:gravity="center_horizontal"/>

            <TextView
                style="@style/invest_right_data"
                android:textSize="15dp"
                android:textColor="@color/main_color"
                android:text="88888"
                android:gravity="center"
                android:layout_width="match_parent"/>

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/devider_color_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/invest_right_data"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="预期收益(元)" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/main_color"
                        android:text="88888" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <TextView
                        style="@style/invest_right_data"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="可用余额(元)" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/main_color"
                        android:text="0.00全投" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/devider_color_gray"/>

        </LinearLayout>

    </ScrollView>

    <!--<Button-->
    <!--android:id="@+id/bt_register"-->
    <!--style="@style/btn_orsnge_big"-->
    <!--android:onClick="register"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="55dp"-->
    <!--android:layout_marginTop="12dp"-->
    <!--android:text="我要投资" />-->


    <RelativeLayout
        android:layout_marginTop="-90dip"
        android:gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <Button
            android:id="@+id/bt_register"
            style="@style/btn_orsnge_big"
            android:onClick="register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:text="我要投资" />

    </RelativeLayout>

</LinearLayout>
