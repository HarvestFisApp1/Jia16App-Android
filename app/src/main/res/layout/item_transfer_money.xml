<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/devider_color_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/fist_view"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <LinearLayout
            android:id="@+id/ll_transfer_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/assets_title"
                    style="@style/asset_invest_name"
                    android:layout_width="wrap_content"
                    android:paddingTop="15dp"
                    android:text=" 双月嘉"/>

                <TextView
                    android:id="@+id/tv_full_sign_state"
                    style="@style/asset_invest_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:visibility="gone"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:background="@drawable/shape_transfer_money"
                    android:text="已满标"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_year_earn"
                        style="@style/asset_invest_name"
                        android:text="0.00%"
                        android:textSize="25dp"
                        android:textColor="@color/main_color"/>

                    <TextView
                        style="@style/asset_invest_name"
                        android:text="预期年化收益"
                        android:paddingTop="13dp"
                        android:textColor="@color/text_black_9"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/text_black_9"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_begin_money"
                        style="@style/asset_invest_name"
                        android:text="0.00元"
                        android:textColor="@color/text_black_9"/>

                    <TextView
                        style="@style/asset_invest_name"
                        android:text="转让总额"
                        android:paddingTop="13dp"
                        android:textColor="@color/text_black_9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_transfer_date"
                        style="@style/asset_invest_name"
                        android:text="0天"
                        android:textColor="@color/text_black_9"/>

                    <TextView
                        style="@style/asset_invest_name"
                        android:text="期限"
                        android:paddingTop="13dp"
                        android:textColor="@color/text_black_9"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
