<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout" />


    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/devider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/login_phone" />

        <EditText
            android:id="@+id/register_phone"
            style="@style/main_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:hint="请输入您的手机号"
            android:textColorHint="@color/hint_text_color"
            android:inputType="number" />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_msg"/>

        <EditText
            android:id="@+id/register_verify_code"
            style="@style/main_edit_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="99"
            android:background="@null"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:textColorHint="@color/hint_text_color"
            android:inputType="number"
            android:maxLength="6" />

        <Button
            android:id="@+id/find_pwd_get_btn"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_marginLeft="-2dp"
            android:background="@drawable/vertify_code_shap"
            android:gravity="center"
            android:onClick="getVerifyCode"
            android:layout_gravity="center_vertical"
            android:text="获取验证码"
            android:layout_marginRight="10dp"
            android:textColor="@color/vertifycode_selector"
            android:textSize="16dp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/devider_color_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/login_pwd" />

            <EditText
                android:id="@+id/et_password"
                style="@style/main_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:gravity="center_vertical"
                android:hint="8位以上登录密码(不全是数字)"
                android:textColorHint="@color/hint_text_color"
                android:inputType="textPassword" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:button="@drawable/icon_switch_selector"
            android:checked="false"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/register_check_box"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:button="@drawable/selector_check_box_bg_short"
            android:checked="true"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="我已阅读并同意"
            android:textColor="#000000"
            android:textSize="13dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@color/transparent"
            android:text="《嘉石榴网络服务协议》"
            android:textColor="@color/main_color"
            android:textSize="13dp"
            android:onClick="gotoProtocol"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        style="@style/btn_orsnge_big"
        android:onClick="register"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:text="注册" />

</LinearLayout>
