<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/devider_color_gray"
    android:clipToPadding="false"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="320dp"
       android:background="@color/white"
       android:orientation="vertical">

        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:background="#fff"
            android:visibility="visible"
            android:clickable="false"
            android:paddingBottom="10.dp"
            android:paddingTop="16.0dp"/>

       <LinearLayout
           android:layout_width="280dp"
           android:layout_height="28dp"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/iv_oval_main"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:src="@drawable/shape_oval_solid_main"
                   android:gravity="center_vertical"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textSize="13dp"
                   android:paddingLeft="5dp"
                   android:textColor="@color/text_gray"
                   android:gravity="center_vertical"
                   android:text="可用资产(元)"/>
           </LinearLayout>


           <TextView
               android:id="@+id/tv_available"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="13dp"
               android:textColor="@color/main_color"
               android:gravity="center_vertical|right"
               android:text="0.00"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="280dp"
           android:layout_height="28dp"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/iv_oval_red"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:src="@drawable/shape_oval_total_red"
                   android:gravity="center_vertical"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textSize="13dp"
                   android:paddingLeft="5dp"
                   android:textColor="@color/text_gray"
                   android:gravity="center_vertical"
                   android:text="投资中(元)"/>
           </LinearLayout>



           <TextView
               android:id="@+id/tv_invest"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="13dp"
               android:textColor="@color/main_color"
               android:gravity="center_vertical|right"
               android:text="0.00"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="280dp"
           android:layout_height="28dp"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/iv_oval_yellow"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:src="@drawable/shape_oval_solid_yellow"
                   android:gravity="center_vertical"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textSize="13dp"
                   android:paddingLeft="5dp"
                   android:textColor="@color/text_gray"
                   android:gravity="center_vertical"
                   android:text="冻结资金(元)"/>
           </LinearLayout>


           <TextView
               android:id="@+id/tv_freeze"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="13dp"
               android:textColor="@color/main_color"
               android:gravity="center_vertical|right"
               android:text="0.00"/>
       </LinearLayout>

   </LinearLayout>

</LinearLayout>
